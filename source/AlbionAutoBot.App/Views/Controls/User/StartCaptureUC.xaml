<UserControl 
    x:Class="AlbionAutoBot.App.Views.Controls.User.StartCaptureUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:AlbionAutoBot.App.Views.Controls.User"
    mc:Ignorable="d" 
    d:DesignHeight="50" 
    d:DesignWidth="200">
    <Border
        Padding="10"
        BorderThickness="0, 1, 0, 0"
        BorderBrush="{StaticResource SolidColorBrush.Grey.Level-6}">
        <Button
            Content="Start"
            Command="{Binding StartCaptureCommand}"
            Style="{StaticResource Button.Main.Blue}"/>
    </Border>
</UserControl>
